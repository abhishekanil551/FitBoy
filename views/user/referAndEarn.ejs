<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Refer & Earn - Fitboy Games</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            background-color: #fff;
            color: #000;
            line-height: 1.6;
        }

        .container {
            width: 100%;
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header */
        header {
            background-color: #000;
            color: #fff;
            padding: 15px 0;
            text-align: center;
            position: relative;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
        }

        .back-btn {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            background-color: #fff;
            color: #000;
            border: 1px solid #fff;
            padding: 5px 10px;
            font-size: 14px;
            text-transform: lowercase;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .back-btn:hover {
            background-color: #ccc;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 40px 0;
            background-color: #f5f5f5;
        }

        .hero h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        /* Rewards Section */
        .rewards {
            padding: 40px 0;
            text-align: center;
        }

        .rewards-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 30px;
        }

        .reward-card {
            background-color: #f5f5f5;
            border: 2px solid #000;
            border-radius: 8px;
            padding: 20px;
            width: 100%;
            max-width: 300px;
        }

        .reward-card.highlighted {
            background-color: #000;
            color: #fff;
        }

        .reward-card h3 {
            margin-bottom: 15px;
        }

        .amount {
            font-size: 42px;
            font-weight: bold;
            margin: 15px 0;
        }

        /* How It Works */
        .how-it-works {
            padding: 40px 0;
            background-color: #f5f5f5;
            text-align: center;
        }

        .steps {
            display: flex;
            flex-direction: column;
            gap: 30px;
            margin-top: 30px;
        }

        .step {
            display: flex;
            align-items: center;
            gap: 15px;
            text-align: left;
            max-width: 500px;
            margin: 0 auto;
        }

        .step-number {
            background-color: #000;
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
            flex-shrink: 0;
        }

        /* Referral Link Section */
        .referral-link {
            padding: 40px 0;
            text-align: center;
        }

        .link-container {
            display: flex;
            max-width: 500px;
            margin: 30px auto;
        }

        .link-container input {
            flex: 1;
            padding: 12px;
            border: 2px solid #000;
            border-right: none;
            border-radius: 4px 0 0 4px;
            font-size: 16px;
        }

        .link-container button {
            background-color: #000;
            color: #fff;
            border: none;
            padding: 0 20px;
            border-radius: 0 4px 4px 0;
            font-weight: bold;
            cursor: pointer;
        }

        .share-options {
            margin-top: 20px;
        }

        .social-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .social-btn {
            padding: 10px 20px;
            border: 1px solid #000;
            background-color: #fff;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .social-btn:hover {
            background-color: #000;
            color: #fff;
        }

        /* Footer */
        footer {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 28px;
            }
            
            .rewards-container {
                flex-direction: column;
                align-items: center;
            }
            
            .reward-card {
                max-width: 100%;
            }
        }

        @media (max-width: 480px) {
            .link-container {
                flex-direction: column;
            }
            
            .link-container input {
                border-right: 2px solid #000;
                border-radius: 4px 4px 0 0;
            }
            
            .link-container button {
                border-radius: 0 0 4px 4px;
                padding: 10px;
            }
            
            .social-buttons {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <button class="back-btn" onclick="history.back()">back</button>
            <div class="logo">FITBOY GAMES</div>
        </div>
    </header>

    <section class="hero">
        <div class="container">
            <h1>REFER & EARN</h1>
            <p>Share with friends and both get rewarded!</p>
        </div>
    </section>

    <section class="how-it-works" style="padding-top: 100px;">
        <div class="container">
            <h2>How It Works</h2>
            <div class="steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <div>
                        <h3>Share Your Link</h3>
                        <p>Copy your unique referral link and share it with friends</p>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div>
                        <h3>Friend Makes a Purchase</h3>
                        <p>When your friend  SIGN UP using your link</p>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div>
                        <h3>Both Get Rewarded</h3>
                        <p>Your friend gets ₹10 off, you earn ₹50 credit!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <section class="referral-link">
        <div class="container">
            <h2>Your Referral Link</h2>
            <div class="link-container">
                <input type="text" id="referral-link" value="<%= referralLink %>" readonly>
                <button id="copy-btn">Copy</button>
            </div>
            <div class="share-options">
                <p>Or share via:</p>
                <div class="social-buttons">
                    <button class="social-btn whatsapp">WhatsApp</button>
                    <button class="social-btn facebook">Facebook</button>
                    <button class="social-btn twitter">Twitter</button>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>© 2025 Fitboy Games. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Copy referral link functionality
            const copyBtn = document.getElementById("copy-btn");
            const referralLink = document.getElementById("referral-link");

            copyBtn.addEventListener("click", function() {
                referralLink.select();
                document.execCommand("copy");
                
                // Change button text temporarily
                const originalText = copyBtn.textContent;
                copyBtn.textContent = "Copied!";
                
                setTimeout(function() {
                    copyBtn.textContent = originalText;
                }, 2000);
            });

            // Social sharing functionality
            const socialButtons = document.querySelectorAll(".social-btn");
            
            socialButtons.forEach(function(button) {
                button.addEventListener("click", function() {
                    const link = referralLink.value;
                    const message = "Check out Fitboy Games! Use my referral link to get ₹10 off your first purchase:";
                    
                    let shareUrl;
                    
                    if (this.classList.contains("whatsapp")) {
                        shareUrl = `https://wa.me/?text=${encodeURIComponent(message + " " + link)}`;
                    } else if (this.classList.contains("facebook")) {
                        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(link)}&quote=${encodeURIComponent(message)}`;
                    } else if (this.classList.contains("twitter")) {
                        shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(message + " " + link)}`;
                    }
                    
                    if (shareUrl) {
                        window.open(shareUrl, "_blank");
                    }
                });
            });
        });
    </script>
</body>
</html>