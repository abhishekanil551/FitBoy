  <div class="container">
    <!-- Header Section -->
    <div class="header">
      <a href="#" class="back-link"   onclick="handleBack(event)">‚Üê Back to Home</a>
      
      <div class="header-content">
        <h1 class="header-title">FitBoy Support Center</h1>
        <p class="header-desc">Need help with your games? We're here for you! Browse our FAQs or contact our support team directly.</p>
      </div>
    </div>
    
